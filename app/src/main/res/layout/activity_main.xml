<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yxf.clipboardtranslate.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/function_control"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_compat"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:checked="true"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/useing_notification"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/switch_compat"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/useing_notification"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/switch_compat"
        android:checked="true"
        android:layout_marginBottom="20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c5c5c5"
        android:layout_above="@id/useing_notification"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/useing_chinese"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/useing_notification"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/useing_chinese"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/useing_notification"
        android:checked="false"
        android:layout_marginBottom="20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c5c5c5"
        android:layout_above="@id/useing_chinese"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/attention"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
